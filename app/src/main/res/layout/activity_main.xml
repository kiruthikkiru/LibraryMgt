<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:useDefaultMargins="true">

    <!-- Heading for Library Management -->
    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:gravity="center"
        android:padding="16dp"
        android:text="Library Management"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Button 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="25dp"
        android:padding="20dp"

        android:background="@color/design_default_color_on_primary"

        >

        <Button
            android:id="@+id/viewBooksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Books" />

    </androidx.cardview.widget.CardView>

    <!-- Button 2 -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/viewAuthorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Authors" />

    </androidx.cardview.widget.CardView>

    <!-- Button 3 -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/viewLendingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Lendings" />

    </androidx.cardview.widget.CardView>

    <!-- Button 4 -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/viewMemberButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Members" />

    </androidx.cardview.widget.CardView>

    <!-- Button 5 -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/viewPublisherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Publisher" />

    </androidx.cardview.widget.CardView>

</GridLayout>
